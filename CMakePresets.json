{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "MMPI_ENABLE_OPENMP": "TRUE",
        "MMPI_ENABLE_MPI": "TRUE",
        "MMPI_BUILD_TESTS": "TRUE",
        "MMPI_BUILD_BENCH": "TRUE",
        "MMPI_BUILD_EXAMPLES": "TRUE",
        "MMPI_CMAKE_DEBUG": "TRUE",
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_CXX_STANDARD_REQUIRED": "TRUE",
        "CMAKE_CXX_EXTENSIONS": "FALSE",
        "CMAKE_POSITION_INDEPENDENT_CODE": "TRUE",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "TRUE"
      }
    },
    {
      "name": "release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "TRUE"
      }
    },
    {
      "name": "debug",
      "hidden": true,
      "cacheVariables": {
        "CMT_CMAKE_DEBUG": "TRUE",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_VERBOSE_MAKEFILE": "TRUE",
        "CMAKE_MESSAGE_LOG_LEVEL": "VERBOSE"
      },
      "environment": {
        "VERBOSE": "1"
      }
    },
    {
      "name": "release-config",
      "displayName": "Release Build",
      "inherits": [
        "release",
        "default"
      ]
    },
    {
      "name": "debug-config",
      "displayName": "Debug",
      "inherits": [
        "debug",
        "default"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "release",
      "configurePreset": "release-config"
    },
    {
      "name": "debug",
      "configurePreset": "debug-config"
    }
  ],
  "testPresets": [
    {
      "name": "release",
      "displayName": "Release",
      "configurePreset": "release-config",
      "output": {
        "verbosity": "extra",
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    },
    {
      "name": "debug",
      "displayName": "Debugr",
      "configurePreset": "debug-config",
      "output": {
        "verbosity": "extra",
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    }
  ]
}
